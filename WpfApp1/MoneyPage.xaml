<Page x:Class="WpfApp1.MoneyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MoneyPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="Aquamarine" Grid.ColumnSpan="2" Grid.RowSpan="11">
            <Label Content="HELP: This is the page for transferring money." HorizontalAlignment="Left" VerticalAlignment="Top" Height="46" Width="759" FontSize="24" FontFamily="Bookman Old Style" Margin="0,415,0,0" Grid.ColumnSpan="4"/>
        </Grid>
        <Label Content="Money Transfer" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Margin="313,0,0,0" Grid.ColumnSpan="2"/>
        <Label Content="From Account Number:" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="2" FontSize="18" Margin="0,12,383,0" Width="217" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBox Name="idBoxFrom" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="2" FontSize="18" Margin="0,16,0,0" Width="234" Grid.Column="1" Grid.RowSpan="2"/>
        <Button Content="Confirm" Grid.Row="7" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" FontSize="20" Margin="325,0,0,0" Click="Button_Click" Grid.ColumnSpan="2"/>
        <Frame Grid.Column="1" x:Name="NewFrame3Edit" NavigationUIVisibility="Hidden"/>
        <Label Content="To Account Number:" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="3" FontSize="18" Margin="200,11,0,0" Width="217" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBox x:Name="idBoxTo" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="3" FontSize="18" Width="234" Grid.Column="1" Margin="0,15,0,0" Grid.RowSpan="2"/>
        <TextBox x:Name="SendAmountBox" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="6" FontSize="18" Margin="275,4,0,0" Width="250" Grid.ColumnSpan="2"/>
        <Label Content="Send Amount:" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="18" Margin="328,3,0,0" Height="37" Grid.Row="5" Width="144" Grid.ColumnSpan="2"/>

    </Grid>
</Page>
